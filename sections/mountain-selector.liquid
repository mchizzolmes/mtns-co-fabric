<section class="mountain-selector" id="mountain-selector-{{ section.id }}">
  <div class="mountain-selector__header">
    <h2 class="mountain-selector__title">{{ section.settings.title | default: 'Shop by Mountain' }}</h2>
    {% if section.settings.subtitle != blank %}
      <p class="mountain-selector__subtitle">{{ section.settings.subtitle }}</p>
    {% endif %}
  </div>
  <div class="mountain-selector__grid">
    {% for block in section.blocks %}
      {% if block.type == 'resort' %}
        <a href="{{ block.settings.resort_url }}" class="mountain-tile" {{ block.shopify_attributes }}>
          {% if block.settings.resort_logo != blank %}
            <div class="mountain-tile__logo">
              {{ block.settings.resort_logo | image_url: width: 200 | image_tag: loading: 'lazy', alt: block.settings.resort_name }}
            </div>
          {% else %}
            <div class="mountain-tile__logo mountain-tile__logo--placeholder">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 80 60" fill="none" aria-hidden="true">
                <path d="M10 50 L30 20 L50 38 L62 24 L72 50Z" fill="#E5E1D8" stroke="#1B3A5C" stroke-width="1.5"/>
              </svg>
            </div>
          {% endif %}
          <span class="mountain-tile__name">{{ block.settings.resort_name }}</span>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</section>

{% stylesheet %}
  .mountain-selector {
    padding: 60px 20px;
    background: #F5F3EF;
  }

  .mountain-selector__header {
    text-align: center;
    margin-bottom: 40px;
  }

  .mountain-selector__title {
    font-family: 'Playfair Display', serif;
    font-size: 32px;
    font-weight: 700;
    color: #1C1C1E;
    margin-bottom: 12px;
  }

  .mountain-selector__subtitle {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    color: #6B7280;
    margin: 0;
  }

  .mountain-selector__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 16px;
    max-width: 1280px;
    margin: 0 auto;
  }

  @media (max-width: 1024px) {
    .mountain-selector__grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .mountain-selector__grid {
      display: flex;
      overflow-x: auto;
      gap: 12px;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      padding-bottom: 8px;
    }
    .mountain-selector__grid::-webkit-scrollbar {
      display: none;
    }
    .mountain-selector__title {
      font-size: 24px;
    }
  }

  .mountain-tile {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 20px 12px;
    border: 1px solid #E5E1D8;
    border-radius: 8px;
    background: #FFFFFF;
    text-decoration: none;
    transition: background 0.2s ease, border-color 0.2s ease, transform 0.15s ease;
    min-width: 140px;
  }

  .mountain-tile:hover {
    background: #D4E9F7;
    border-color: #1B3A5C;
    transform: translateY(-2px);
  }

  .mountain-tile__logo {
    width: 80px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
  }

  .mountain-tile__logo img {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .mountain-tile__logo--placeholder svg {
    width: 80px;
    height: 60px;
  }

  .mountain-tile__name {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: #1C1C1E;
    text-align: center;
    line-height: 1.3;
  }
{% endstylesheet %}

